<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正常状态 -->
    <item android:state_pressed="false">
        <layer-list>
            <!-- 第一层 -->
            <item>
                <shape>
                    <solid 
                        android:color="#60000000" />
                    <corners
                        android:radius="4dp" />
                    
                    <padding android:left="0dp" 
                        android:top="0dp" 
                        android:right="1.6dp" 
                        android:bottom="1.6dp"/>
                </shape>
            </item>
            
        </layer-list>
   </item>
</selector>
